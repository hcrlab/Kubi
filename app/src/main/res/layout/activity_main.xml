<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:screenOrientation="landscape"
    tools:context=".MainActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="horizontal" >

        <uw.hcrlab.kubi.screen.RobotFace
            android:id="@+id/face"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:background="@drawable/settings_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom">

            <Button
                android:id="@+id/lessonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson"
                android:orientation="horizontal"
                android:layout_gravity="left" />
            <Button
                android:id="@+id/convoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:orientation="horizontal"
                android:layout_gravity="right" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/leftCard"
            android:layout_width="@dimen/card_hand_width"
            android:layout_height="@dimen/card_height"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_margin_btm_init">


            <ImageView
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:id="@+id/testImageView"
                android:layout_gravity="right"
                android:background="@color/white"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/finger_width"
                android:layout_height="@dimen/hand_height"
                android:layout_gravity="center|left">

                <View
                    android:id="@+id/leftFingerOne"
                    android:layout_width="@dimen/finger_width"
                    android:layout_height="@dimen/finger_height"
                    android:background="@drawable/finger"/>
                <View
                    android:id="@+id/leftFingerTwo"
                    android:layout_width="@dimen/finger_width"
                    android:layout_height="@dimen/finger_height"
                    android:background="@drawable/finger"/>
                <View
                    android:id="@+id/leftFingerThr"
                    android:layout_width="@dimen/finger_width"
                    android:layout_height="@dimen/finger_height"
                    android:background="@drawable/finger"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/rightCard"
            android:layout_width="@dimen/card_hand_width"
            android:layout_height="@dimen/card_height"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_margin_btm_init">


            <ImageView
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:id="@+id/testImageView2"
                android:layout_gravity="left"
                android:background="@color/white"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/finger_width"
                android:layout_height="@dimen/hand_height"
                android:layout_gravity="center|right">

                <View
                    android:id="@+id/rightFingerOne"
                    android:layout_width="@dimen/finger_width"
                    android:layout_height="@dimen/finger_height"
                    android:background="@drawable/finger"/>
                <View
                    android:id="@+id/rightFingerTwo"
                    android:layout_width="@dimen/finger_width"
                    android:layout_height="@dimen/finger_height"
                    android:background="@drawable/finger"/>
                <View
                    android:id="@+id/rightFingerThr"
                    android:layout_width="@dimen/finger_width"
                    android:layout_height="@dimen/finger_height"
                    android:background="@drawable/finger"/>

            </LinearLayout>

        </FrameLayout>

        <!--<org.opencv.android.JavaCameraView-->
            <!--android:id="@+id/camera_preview"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:visibility="gone"-->
            <!--opencv:show_fps="false"-->
            <!--android:layout_gravity="bottom"-->
            <!--opencv:camera_id="front" />-->

    </FrameLayout>

</LinearLayout>
