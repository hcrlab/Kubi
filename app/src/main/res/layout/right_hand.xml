<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightCard"
    android:layout_width="@dimen/card_hand_width"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="bottom|right"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin_btm_init">


    <ImageView
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:id="@+id/testImageView2"
        android:layout_gravity="left"
        android:background="@color/white"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/finger_width"
        android:layout_height="@dimen/hand_height"
        android:layout_gravity="center|right">

        <View
            android:id="@+id/rightFingerOne"
            android:layout_width="@dimen/finger_width"
            android:layout_height="@dimen/finger_height"
            android:background="@drawable/finger"/>
        <View
            android:id="@+id/rightFingerTwo"
            android:layout_width="@dimen/finger_width"
            android:layout_height="@dimen/finger_height"
            android:background="@drawable/finger"/>
        <View
            android:id="@+id/rightFingerThr"
            android:layout_width="@dimen/finger_width"
            android:layout_height="@dimen/finger_height"
            android:background="@drawable/finger"/>

    </LinearLayout>

</FrameLayout>