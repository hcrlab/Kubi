<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leftCard"
    android:layout_width="@dimen/card_hand_width"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="bottom|left"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin_btm_init">


    <ImageView
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:id="@+id/testImageView"
        android:layout_gravity="right"
        android:background="@color/white"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/finger_width"
        android:layout_height="@dimen/hand_height"
        android:layout_gravity="center|left">

        <View
            android:id="@+id/leftFingerOne"
            android:layout_width="@dimen/finger_width"
            android:layout_height="@dimen/finger_height"
            android:background="@drawable/finger"/>
        <View
            android:id="@+id/leftFingerTwo"
            android:layout_width="@dimen/finger_width"
            android:layout_height="@dimen/finger_height"
            android:background="@drawable/finger"/>
        <View
            android:id="@+id/leftFingerThr"
            android:layout_width="@dimen/finger_width"
            android:layout_height="@dimen/finger_height"
            android:background="@drawable/finger"/>

    </LinearLayout>

</FrameLayout>

